# botyum-basics ortam değişkenleri (örnek)

# Çeviri servisi uç noktası
LIBRETRANSLATE_URL=https://libretranslate.de

# Slack entegrasyonu için token
SLACK_TOKEN=xoxb-your-slack-token

# GitHub API için token (GitHub Issues kullanılırsa)
GITHUB_TOKEN=ghp_your_github_token

# Trello API
TRELLO_KEY=your_trello_key
TRELLO_TOKEN=your_trello_token

# E-posta (IMAP) özeti için
IMAP_HOST=imap.example.com
IMAP_USER=you@example.com
IMAP_PASS=your_password_or_app_password
IMAP_PORT=993
IMAP_TLS=true

# (İsteğe bağlı olarak başka API tokenları da ekleyebilirsin)
